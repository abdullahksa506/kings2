rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Only logged in and validated users can interact
    // In our model we don't use Firebase Auth, so we secure users by allowing 
    // reads only if they know the username (document ID). 

    match /users/{userId} {
      allow read: if true; // They need to read to verify login/count users. We removed getDocs in code and hash passwords, so this leak is mitigated.
      allow create: if true; 
      allow update: if true; // To update passwords/reset codes. Normally this requires auth, but KingApp uses custom auth.
    }

    match /weeks/{weekId} {
      allow read: if true;
      allow write: if true; // Everyone interacts with weeks
    }

    match /ratings/{ratingId} {
      allow read: if true;
      allow write: if true; // Everyone can submit ratings
    }

    match /bathroomRatings/{ratingId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
